@model EmployeeArrivalQueryModel

@{
    ViewData["Title"] = "Employees ArrivalTime";
}

<form method="get">
    <div class="row mb-5">
        <div class="form-gorup col-md-4">
            <label asp-for="SearchTerm">Search</label>
            <input asp-for="SearchTerm" class="form-control" />
        </div>

        <div class="form-gorup col-md-4">
            <div class="form-group">
                <label asp-for="Sorting">Sort By</label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>EmployeeId</option>
                    <option value="1">Name</option>
                    <option value="2">ArrivalTime</option>
                    <option value="3">Role</option>
                </select>
            </div>
        </div>

        <div class="form-gorup col-md-3">
            <input type="submit" class="btn btn-primary" value="Filter" />
            <input type="button" value="Update" onclick="location.href='@Url.Action("Employees", "EmployeeArrival", Model.Date)'" />
        </div>
    </div>
</form>

<div class="row">
    <meta name="viewport" content="width=device-width" />
    <table class=\"styled-table\">
        <thead>
            <tr>
                <th>EmployeeId</th>
                <th>Name</th>
                <th>ArrivalTime</th>
                <th>Manager</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.ModelCollection)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.ArrivedTime.Date</td>
                    <td>@employee.Manager</td>
                    <td>@employee.Role</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var previusPage = Model.CurrentPage - 1;
    if (previusPage < 1)
    {
        previusPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalElements / EmployeeArrivalQueryModel.EmployeePerPage);
}

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="EmployeeArrival"
           asp-action="Employees"
           asp-route-currentPage="@(previusPage)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">Previous</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-lg-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="EmployeeArrival"
           asp-action="Employees"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">Next</a>
    </div>
</div>
