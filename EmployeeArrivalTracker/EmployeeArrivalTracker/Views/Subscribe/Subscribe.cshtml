@model RequestDateModel

@{
    ViewData["Title"] = "Employee Arrival";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <form method="post" enctype="multipart/form-data">

                <div>@Html.ValidationSummary(false, "", new { @class = "validation-summary-errors" })</div>

                <div class="btncontainer">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" asp-format="{0:yyyy-MM-dd}" class="form-control" value="">
                    @*<span asp-validation-for="Date" class="small text-danger"></span>*@
                    <br />
                </div>

                <input class="btn btn-primary" type="submit" value="Search">
            </form>
        </div>
    </div>
</div>